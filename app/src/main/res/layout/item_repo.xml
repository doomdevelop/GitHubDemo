<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    style="@style/MatchWidth"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlRepoName"
        style="@style/MatchWidth"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/txRepoNameLabel"
            style="@style/Wrap"
            android:layout_alignParentLeft="true"
            android:text="@string/repo_name"/>

        <TextView
            android:id="@+id/tvRepoName"
            style="@style/Wrap"
            android:layout_toRightOf="@+id/txRepoNameLabel"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:paddingLeft="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="repo name"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutRepoDescription"
        style="@style/MatchWidth"
        android:layout_below="@+id/rlRepoName">

        <TextView
            android:id="@+id/tvRepoDescriptionLabel"
            style="@style/Wrap"
            android:layout_alignParentLeft="true"
            android:text="@string/repo_description"/>

        <TextView
            android:id="@+id/tvRepoDescription"
            style="@style/Wrap"
            android:layout_toRightOf="@+id/tvRepoDescriptionLabel"
            android:paddingLeft="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentRight="true"
            android:gravity="right"
            tools:text="repo description sddsd sds dsdsdsds dsd sdsdsds dsdsdsds dsdds"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutRepoLoginOwner"
        style="@style/MatchWidth"
        android:layout_below="@+id/layoutRepoDescription">

        <TextView
            android:id="@+id/tvRepoLoginOwnerLabel"
            style="@style/Wrap"
            android:layout_alignParentLeft="true"
            android:text="@string/repo_login_owner"/>

        <TextView
            android:id="@+id/tvRepoLoginOwner"
            style="@style/Wrap"
            android:paddingLeft="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/tvRepoLoginOwnerLabel"
            android:layout_alignParentRight="true"
            android:gravity="right"
            tools:text="repo login owner"/>
    </RelativeLayout>
</RelativeLayout>